/* 搜索*/
page{background-color: #eee}
.search{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.search-wrap{
    position: relative;
    display: flex;
    align-items: center;
    height: 60rpx;
    padding: 0 20rpx;
    background: #fff;
    border-radius: 5rpx;
    width: 80%;
    margin:20rpx 10rpx;  
    margin-bottom: 10rpx;
    height: 75rpx;
}
.search-wrap .icon-search{
    display: flex;
}
.search-wrap .icon-search>text{
    font-size: 12px;
    color: #aaa;
    margin-top: 5rpx;
}
.icon-search>image{
    margin-left: 10rpx;
    width: 40rpx;
    height: 40rpx;
}
.search-wrap .search-input{
    flex: auto;
    font-size: 12px;
}
.search-cancle{
    font-size: 12px;
    color: #07B507;
    margin-right: 25rpx;
    flex-wrap: nowrap;

}

/*默认*/
.classify{
    background-color:#fff;
    width: 150rpx;
    border-bottom: 0;
    border-radius: 10rpx;
    z-index: 1;
    position: fixed;
    top: 9%;
    left: 10rpx;
}
.classify view{
    font-size: 12px;
    margin: 10rpx 0;
    border-bottom:1rpx solid #aaa;
    padding: 15rpx 20rpx;
    text-align: center;
}
.active{color: #ff0000;}
.noactive{color: #aaa;}
.show{display: block}
.hide{display: none}

/*历史记录*/
.his_jl{
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
}
.his_jl>text{
    font-size: 12px;
    color: #aaa;
}
.his_jl>image{width: 50rpx;height: 50rpx; }
.his_bs{
    padding: 10rpx 15rpx;
    background-color: #ddd;
    width: 20%;
    font-size: 10px;
    text-align: center;
    margin-left:10rpx; 
    color: #808080;
}


/*商品样式*/
.p-container{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-between;
  margin:10rpx 0; 
}
.p-pro{
  display: flex;
  flex-direction: column;
  background-color:#fff;
  padding-bottom: 15rpx;
  box-sizing: border-box;
  width:49.3%;
  font-size: 12px; 
  margin-bottom: 10rpx;
}
.p-img{
    width: 100%;
    height:333rpx;
    box-sizing: border-box;
}
.p-details{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding:0 15rpx;
}

/* 没有商品显示 */
.p-box{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top:19%; 
}



.p-show{display: block}
.p-hide{display: none}