/*分类 */
/*搜索框*/
.class_parent{
    position: fixed;
    top: 0rpx;
    left: 0;
    z-index: 1;
    margin: 0;
    width: 100%;
    box-sizing: border-box;
}
.shop_parent{
    padding: 20rpx 30rpx;
    position: relative;
    background-color: #eee
  }
  .shop_input{
    border: 1rpx solid #ddd;
    width: 100%;
    margin: 0 auto;
    border-radius: 5px;
    background-color: #fff;
    height: 1.8rem;
  }
  .shop_text{
    font-size: 12px;
    text-align: center;
    display: inline-flex;
    position: absolute;
    top:35%;left: 46%;
  }
  .shop_text .shop_icon{margin-left: 10rpx}
/*导航*/  
.scroll{
    padding: 25rpx 0;
    display: flex;
    /* overflow-x:scroll; */
    justify-content: space-around;
    white-space: nowrap;
    background-color: #fff;
    width: 100%
}
::-webkit-scrollbar {display: none;}
.scroll navigator{
    /* margin-left: 70rpx; */
    font-size: 12px;
}
.red-btn{
    padding: 7rpx 20rpx;
    background-color: #ff0000;
    color: #fff;
    text-align: center;
    border-radius: 50px;
}
.gray-btn{
    padding: 7rpx 20rpx;
    color: #555;
    text-align: center;
}
.class_products{
    margin-top: 26%;
    margin-bottom: 30rpx;
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    justify-content: space-between;
    box-sizing: border-box;
}
.class_list{
    width: 49%;
    background: #fff;   
    height: 500rpx;
    margin-bottom: 15rpx;
    box-sizing: border-box;
    padding: 10rpx 0;
}
.classImg{width: 100%;height:333rpx;padding: 0}
.class_details{
    width: 99%;
    height: 72rpx;
    display: -webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;  
    text-overflow: ellipsis;
    font-size: 12px;
    overflow: hidden;
    margin-top:10rpx; 
    padding: 0 15rpx;
}
.pro_price{ 
    display: flex;
    justify-content: space-between;
    width: 90%; 
    font-size: 12px;
    align-items: center;
    margin-top:20rpx;
    padding: 0 15rpx;
}




