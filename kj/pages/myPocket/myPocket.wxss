/* 我的收藏 */
.myPocket{
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color:#fff; 
  border-top: 1rpx solid #ddd;
}
.m-pocket{
  padding:35rpx 0;
  font-size: 12px;
  width: 20%;
  text-align: center;
}
.active{color: #ff0000;border-bottom: 1rpx solid #ff0000}
.p-container{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-between;
  margin:10rpx 0; 
}
.p-pro{
  display: flex;
  flex-direction: column;
  background-color:#fff;
  padding: 15rpx 15rpx;
  box-sizing: border-box;
  width:49.3%;
  font-size: 12px; 
  margin-bottom: 10rpx;
}
.p-img{
    width: 100%;
    height:333rpx;
    box-sizing: border-box;
}
.p-details{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.pp{font-size: 12px;color: #555;position: fixed;top:20%;left:37%}
.p-hide{display: none}
.p-show{display: block}

